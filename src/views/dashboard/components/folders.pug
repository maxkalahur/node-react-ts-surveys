div(class="box folders-box folders")
    div(class="box-title")
        h3 Folders
        a(href="#" class="btn btn-link show-surveys") Show All Surveys
    ul(id="folders")
        li
            div(class="col-12 text-center")
                svg(version="1.1" id="L9" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                viewBox="0 0 100 100" enable-background="new 0 0 0 0" xml:space="preserve" class="svg-loader")
                    rect(x="20" y="50" width="4" height="10" fill="#0000ff")
                        animateTransform(attributeType="xml"
                            attributeName="transform" type="translate"
                            values="0 0; 0 20; 0 0"
                            begin="0" dur="0.6s" repeatCount="indefinite")
                    rect(x="30" y="50" width="4" height="10" fill="#0000ff")
                        animateTransform(attributeType="xml"
                            attributeName="transform" type="translate"
                            values="0 0; 0 20; 0 0"
                            begin="0.2s" dur="0.6s" repeatCount="indefinite")
                    rect(x="40" y="50" width="4" height="10" fill="#0000ff")
                        animateTransform(attributeType="xml"
                            attributeName="transform" type="translate"
                            values="0 0; 0 20; 0 0"
                            begin="0.4s" dur="0.6s" repeatCount="indefinite")

